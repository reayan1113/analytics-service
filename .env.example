# Analytics Service - Environment Template
# Copy this file to .env and configure for your environment

# Server Configuration
SERVER__HOST=0.0.0.0
SERVER__PORT=8087

# Order Database (Read-Only)
ORDER_DATABASE__HOST=localhost
ORDER_DATABASE__PORT=3306
ORDER_DATABASE__USERNAME=root
ORDER_DATABASE__PASSWORD=password
ORDER_DATABASE__DATABASE=orderdb

# Analytics Database (Read-Write)
ANALYTICS_DATABASE__HOST=localhost
ANALYTICS_DATABASE__PORT=3306
ANALYTICS_DATABASE__USERNAME=root
ANALYTICS_DATABASE__PASSWORD=password
ANALYTICS_DATABASE__DATABASE=analyticsdb

# Forecasting Configuration
FORECASTING__MOVING_AVERAGE_WINDOW=7
FORECASTING__ENABLE_LINEAR_REGRESSION=true
FORECASTING__ENABLE_ENSEMBLE_METHOD=true
FORECASTING__EXPONENTIAL_SMOOTHING_ALPHA=0.3
FORECASTING__TREND_SMOOTHING_BETA=0.1
FORECASTING__SEASONAL_PERIODS=7
FORECASTING__POLYNOMIAL_DEGREE=2
FORECASTING__OUTLIER_DETECTION_ENABLED=true
FORECASTING__HISTORY_DAYS_DAILY=30
FORECASTING__HISTORY_DAYS_HOURLY=7

# Scheduler Configuration
SCHEDULER__ENABLED=true
SCHEDULER__RUN_TIME=00:00
